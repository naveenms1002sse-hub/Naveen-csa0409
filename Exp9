#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <sys/types.h>
#include <unistd.h>

#define SHM_SIZE 1024  // shared memory size

int main() {
    int shmid;
    char *shared_memory;
    pid_t pid;
    key_t key = ftok("shmfile", 65);  // generate unique key

    // Create the shared memory segment
    shmid = shmget(key, SHM_SIZE, 0666 | IPC_CREAT);
    if (shmid == -1) {
        perror("shmget failed");
        exit(1);
    }

    pid = fork(); // create a child process

    if (pid < 0) {
        perror("fork failed");
        exit(1);
    }

    // Writer process
    else if (pid == 0) {
        // Attach to shared memory
        shared_memory = (char *)shmat(shmid, NULL, 0);
        if (shared_memory == (char *)(-1)) {
            perror("shmat failed");
            exit(1);
        }

        printf("Child (Writer): Enter a message: ");
        fgets(shared_memory, SHM_SIZE, stdin);

        printf("Child (Writer): Message written to shared memory.\n");

        // Detach from shared memory
        shmdt(shared_memory);
    }

    // Reader process
    else {
        wait(NULL); // wait for child to complete

        // Attach to shared memory
        shared_memory = (char *)shmat(shmid, NULL, 0);
        if (shared_memory == (char *)(-1)) {
            perror("shmat failed");
            exit(1);
        }

        printf("Parent (Reader): Message read from shared memory: %s\n", shared_memory);

        // Detach from shared memory
        shmdt(shared_memory);

        // Destroy the shared memory segment
        shmctl(shmid, IPC_RMID, NULL);
    }

    return 0;
}
